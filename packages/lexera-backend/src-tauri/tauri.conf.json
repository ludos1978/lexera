{
  "productName": "Lexera Backend",
  "version": "0.1.0",
  "identifier": "com.lexera.backend",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "icon": ["icons/icon.png"]
  },
  "app": {
    "windows": [
      {
        "title": "Lexera Backend",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "visible": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost http://localhost:* http://127.0.0.1:*"
    }
  }
}
