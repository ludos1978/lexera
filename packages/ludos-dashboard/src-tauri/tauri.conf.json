{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Ludos Dashboard",
  "version": "0.1.0",
  "identifier": "com.ludos.dashboard",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "icon": [
      "icons/icon.png"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Ludos Dashboard",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost http://localhost:* http://127.0.0.1:*"
    }
  }
}
